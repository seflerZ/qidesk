<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="QiHua" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/grey_overlay</item>
        <item name="android:statusBarColor">@color/grey_overlay</item>
        <item name="colorAccent">@color/theme</item>
        <item name="actionBarStyle">@style/QiHuaActionBar</item>
    </style>

    <style name="QiHuaActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="elevation">0dp</item>

        <item name="displayOptions">showTitle|useLogo|showHome</item>
        <item name="logo">@drawable/short_vertical_bar</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- Toolbar background color -->
        <item name="colorPrimary">#808080</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="actionOverflowButtonStyle">@style/CustomOverflowButton</item>
    </style>

    <style name="ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/notification</item>
    </style>
</resources>
